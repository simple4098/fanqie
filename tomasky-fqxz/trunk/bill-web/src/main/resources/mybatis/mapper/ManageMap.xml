<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tomasky.bill.mapper.ManageMapper">

	<!-- 根据条件查询客栈配置信息 -->
	<select id="getInnInfos" parameterType="com.tomasky.bill.bo.param.manage.InnBo" resultType="com.tomasky.bill.vo.manage.InnVo">
		<include refid="find_inn_config_sql"/>
		ORDER BY i.id DESC
	</select>

	<select id="getInnInfosCount" parameterType="com.tomasky.bill.bo.param.manage.InnBo" resultType="java.lang.Long">
		SELECT count(t.id) as num FROM (
			<include refid="find_inn_config_sql"/>
		) t
	</select>


	<sql id="find_inn_config_sql">
		SELECT i.id,i.name,i.region_id as regionId,c.poundage_ratio as poundageRatio
		FROM "public".tomato_inn i
		LEFT JOIN "public".tomato_inn_config c ON i.id = c.inn_id
		<where>
			<if test="innId != null">
				AND i.id = #{innId}
			</if>
			<if test="innName != null">
				AND i.name LIKE '%'||#{innName}||'%'
			</if>
		</where>
	</sql>

</mapper>